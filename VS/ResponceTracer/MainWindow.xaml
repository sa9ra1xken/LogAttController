<Window x:Class="ResponceTracer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResponceTracer"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="data_grid" AutoGenerateColumns="True" Margin="5">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Clipboard" Click="MenuItem_Click"></MenuItem>
                    <MenuItem x:Name="menu_clear" Header="Clear" Click="menu_clear_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox x:Name="tb_serial" Width="100" Margin="5"/>
            <TextBox x:Name="tb_visa" Width="100" Margin="5"/>
            <Button x:Name="btn_run" Height="25" Margin="5" Click="btn_run_Click" Content="Run" HorizontalContentAlignment="Center" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
